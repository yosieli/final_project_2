<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a href="/books" class="nav-link">Book Home Page</a>
          </li>
          <li class="nav-item active">
            <%= link_to "Log out", "/users", method: "delete", class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <a href="/users/<%=@user.id%>/edit" class="nav-link">Edit</a>
            <!-- <a class="nav-link disabled" href="#">Disabled</a> -->
          </li>
        </ul>
        
      </div>
    </nav>
</header>


        <a href="/users/<%=@user.id%>/edit" class="btn btn-secondary my-2">Edit</a>

<main role="main">

  
    <div class="text-center"style='margin:1em'>
      <h1 class="jumbotron-heading" style=" color:DodgerBlue; font-size: 65px; font-family: bold;font-style: italic;"> Welcome    <%=@user.user_name%></h1>
    </div>
    
    


  <div class="album py-5" style='background-color:Lightblue'>
    <div class="container">

    <% if @user.books.length > 0 %>

      <div class="row" >
      <% @user.books.each do |book| %>  
           
        <div class="col-md-4 container jumbotron">
          <div class="card mb-3 shadow-sm ">
            <a href = <%="/books/#{book.id}"%>>
            <img class="bd-placeholder-img card-img-top" width="200" height="225" src=<%="#{book.img_url}"%> >
            </a>

            <div class="card-body">
              <p style="  font-size: 20px; font-family: bold;font-style: italic;"class="card-text">Title: <%= book.title %></p>
              <p style="  font-size: 20px; font-family: bold;font-style: italic;" class="card-text">Category: <%= book.genre %></p>
              <p style="  font-size: 20px; font-family: bold;font-style: italic;"class="card-text">Author: <%= book.author%></p>  
              <%= link_to 'Delete', "/books/#{book.id}",class:"btn btn-primary btn-sm", method: "DELETE" %>
            </div>
           
          </div>
        </div>
        <% end %>
      <%else%>
      <div class='container-fluid text-center'>
        <img src="https://images.all-free-download.com/images/graphiclarge/library_drawing_readers_bookshelf_icons_colored_cartoon_6833503.jpg" class='img-fluid' height='100%' width='100%'>
      </div>
      <%end%>
      </div>
    </div>
  </div>
</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    <p> copyright J and F enterprises </p>
  </div>
</footer>