<main role="main" >
  
  

  <div class="album py-5 " style='background-color:Darkgrey'>
  <br>
  <br>
    <div class="text-center" style="margin:0em"> 
        <h1 style=" color:Black; font-size: 65px; font-family: 'Times New Roman';font-weight: 'bold' ">Welcome to The BookHub</h1>
    </div>
    <br>
    <div class="container">

      <div class="row">
      <% @books.each do |book| %>  
           
        <div class="col-md-4 container jumbotron">
          <div class="card mb-3 shadow-sm ">
            <a href = <%="/books/#{book.id}"%>>
            <img class="bd-placeholder-img card-img-top" width="200" height="225" src=<%="#{book.img_url}"%> >
            </a>

            <div class="card-body">
              <p style="  font-size: 20px; font-family: bold;font-style: italic;" class="card-text">Title: <%= book.title %></p>
              <p style="  font-size: 20px; font-family: bold;font-style: italic;"class="card-text">Category: <%= book.genre %></p>
              <p style="  font-size: 20px; font-family: bold;font-style: italic;"class="card-text">Author: <%= book.author%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div >
                  <%= button_to "Purchase", purchases_path(book_id: book.id, :method => :post), class:"btn btn-primary btn-sm"%> <!--Button Helper post to purchases/create passes book.id in params>-->
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<%=%>
